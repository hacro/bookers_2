
<div class="container">
    <div class="inside-container">
        <div class="side-bar col-md-3">
            <%= render 'profile', user: current_user %>
            <%= link_to 'Edit profile', edit_user_path(current_user) %>
            <%= render 'books/mkbook', Book: @book %>
        </div>

        <div class="user-container col-md-8">
            <table class="table table-striped">
                <h1>Users</h1>
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                    </tr>
                </thead>
            <% @users.each do |user| %>
                <tbody>
                    <tr>
                        <td> <%= image_tag user.get_profile_image(100,100) %></td>
                        <td> <%= user.name %></td>
                        <td> <%= link_to "Show",  user_path(user.id)%></td>
                    </tr>
                </tbody>
            <% end %>
        </table>
        </div>
    </div>
</div>