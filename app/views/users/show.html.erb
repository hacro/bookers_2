<%= flash[:editUserSuccess] %>

<h1>Books</h1>

<div class="side-bar">
    <%= render 'profile', user: @user %>
    <% if @user == current_user %>
        <%= link_to "Edit Profile",  edit_user_path(@user)%>
    <% end %>
    <%= render 'books/mkbook', Book: @book %>
</div>

<div class="user-container">
    <table>
        <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
        </thead>
        <% @books.each do |book| %>
            <tbody>
                <tr>
                    <td> <%= image_tag @user.get_profile_image(100,100) %></td>
                    <td>
                        <%= link_to book.title, book_path(book.id)%>
                    </td>
                    <td>
                        <%= book.body %>
                    </td>
                </tr>
            </tbody>
        <% end %>
    </table>
</div>