<%= flash[:mkBookError] %>

<h1>Books</h1>

<div class="container">

    <div class="side-bar">
        <%= render 'users/profile', user: current_user %>
        <%= link_to 'Edit profile', edit_user_path(current_user) %>
        <%= render 'mkbook', Book: @book %>
    </div>
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>
    <% @books.each do |book| %>
        <tbody>
            <tr>
                <td> <%= image_tag book.user.get_profile_image(100,100) %></td>
                <td> <%= link_to book.title, book_path(book.id) %></td>
                <td> <%= book.body %></td>
            </tr>
        </tbody>
    <% end %>
    </table>
</div>