<h1>Books</h1>

<div class="container">
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            </thead>
        <% @books.each do |book| %>
            <tbody>
                <tr>
                    <td> <%= image_tag 'sample-author1.jpg' %></td>
                    <td> <%= link_to book.title, book_path(book.id) %></td>
                    <td> <%= book.body %></td>
                </tr>
            </tbody>
        <% end %>
    </table>
</div>