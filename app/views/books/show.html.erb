<h1>Book detail</h1>

<table>
    <tbody>
        <tr>
            <td>
                <%= link_to books_path do %>
                    <%= image_tag 'sample-author1.jpg' %>
                    <br>
                    ユーザーネーム
                <% end %>
            </td>
            <td> <%= @book.title %></td>
            <td> <%= @book.body %></td>
            <td>
                <button>Edit</button>
            </td>
            <td>
                <% if @book.user == current_user %>
                    <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"} %>
                <% end %>
            </td>
        </tr>
    </tbody>
</table>